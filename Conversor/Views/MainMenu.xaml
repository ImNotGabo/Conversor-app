<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Conversor.Views.MainMenu"
             NavigationPage.HasNavigationBar="False">
   
        <StackLayout BackgroundColor="#FEE6B6">
            <Label Text="Converter" 
                   FontSize="40"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>
        <Frame VerticalOptions="FillAndExpand"
               Margin="40, 20"
               CornerRadius="10"
               HasShadow="False">
            <StackLayout VerticalOptions="Center"
                         Spacing="30">
                <Image Source="calculadora.png" />
                <Label Text="(cm) to (m)" 
                       FontSize="30"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                <Button Text="Start"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        TextTransform="None"
                        BackgroundColor="#FDE080"
                        CornerRadius="10"
                        x:Name="BtnStart"
                        Clicked="BtnStart_Clicked"/>
            </StackLayout>
        </Frame>
    </StackLayout>
    
</ContentPage>